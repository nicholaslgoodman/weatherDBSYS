@model WeatherApp.Models.NightAndDay

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>NightAndDay</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ZIP" />
            <input type="hidden" asp-for="Date" />
            <div class="form-group">
                <label asp-for="Sunrise" class="control-label"></label>
                <input asp-for="Sunrise" class="form-control" />
                <span asp-validation-for="Sunrise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sunset" class="control-label"></label>
                <input asp-for="Sunset" class="form-control" />
                <span asp-validation-for="Sunset" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Moonrise" class="control-label"></label>
                <input asp-for="Moonrise" class="form-control" />
                <span asp-validation-for="Moonrise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Moonset" class="control-label"></label>
                <input asp-for="Moonset" class="form-control" />
                <span asp-validation-for="Moonset" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
